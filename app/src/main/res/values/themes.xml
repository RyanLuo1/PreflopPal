<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PreflopPal" parent="Theme.MaterialComponents.DayNight.NoActionBar">

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_purple</item>
        <item name="colorPrimaryVariant">@color/dark_purple</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/medium_purple</item>
        <item name="colorSecondaryVariant">@color/light_purple</item>
        <item name="colorOnSecondary">@color/dark_purple</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/dark_purple</item>
        <!-- Background colors -->
        <item name="android:windowBackground">@color/background_light_lavender</item>
        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/dark_purple</item>
        <!-- Text colors -->
        <item name="android:textColor">@color/dark_purple</item>
        <item name="android:textColorSecondary">@color/medium_purple</item>
        <!-- Customize your theme here. -->

        <!-- dropdown -->
        <item name="android:textColorPrimary">@color/dark_purple</item>
    </style>

    <style name="CustomDialogTheme" parent="Theme.MaterialComponents.Dialog">
        <item name="android:windowMinWidthMajor">90%</item>
        <item name="android:windowMinWidthMinor">90%</item>
        <item name="android:background">@color/background_light_lavender</item>
        <item name="android:textColorPrimary">@color/dark_purple</item>
    </style>

    <style name="AlertDialogTheme" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="android:background">@color/background_light_lavender</item>
        <item name="android:textColorPrimary">@color/dark_purple</item>
        <item name="android:textColor">@color/dark_purple</item>
        <item name="android:textColorSecondary">@color/medium_purple</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>


    <!--Info icon popup for table position image -->
    <style name="DialogTheme" parent="Theme.AppCompat.Dialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>


</resources>