<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PreflopPal" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/green_500</item>
        <item name="colorPrimaryVariant">@color/green_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blue_200</item>
        <item name="colorSecondaryVariant">@color/blue_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/dark_gray_900</item>
        <!-- Background colors -->
        <item name="android:windowBackground">@color/dark_gray_900</item>
        <item name="colorSurface">@color/dark_gray_800</item>
        <item name="colorOnSurface">@color/white</item>
        <!-- Text colors -->
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorSecondary">@color/light_gray_300</item>
        <!-- Customize your theme here. -->

        <!-- dropdown -->
        <item name="android:textColorPrimary">@color/white</item>

    </style>

    <style name="CustomDialogTheme" parent="Theme.MaterialComponents.Dialog">
        <item name="android:windowMinWidthMajor">90%</item>
        <item name="android:windowMinWidthMinor">90%</item>
    </style>

</resources>