<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/light_purple">

    <!-- Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/primary_purple"
        android:paddingTop="8dp">

        <ImageView
            android:id="@+id/backButton"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="start"
            android:layout_marginStart="16dp"
            android:src="@drawable/ic_back"
            android:clickable="true"
            android:focusable="true"
            app:tint="@color/white"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Practice Mode"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:textStyle="bold"
            android:fontFamily="@font/roboto_regular"/>

    </androidx.appcompat.widget.Toolbar>

    <!-- Practice Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Hand Display Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="24dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/primary_purple">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="Your Hand"
                        android:textColor="@color/white"
                        android:textSize="24sp"
                        android:layout_marginBottom="16dp"
                        android:fontFamily="@font/roboto_regular"/>

                    <LinearLayout
                        android:id="@+id/cardSelectionLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="16dp">

                        <TextView
                            android:id="@+id/card1"
                            android:layout_width="0dp"
                            android:layout_height="120dp"
                            android:layout_marginEnd="8dp"
                            android:layout_weight="1"
                            android:background="@drawable/card_background"
                            android:gravity="center"
                            android:text="A♠"
                            android:textColor="@color/black"
                            android:textSize="36sp"
                            android:clickable="true"
                            android:focusable="true"/>

                        <TextView
                            android:id="@+id/card2"
                            android:layout_width="0dp"
                            android:layout_height="120dp"
                            android:layout_marginStart="8dp"
                            android:layout_weight="1"
                            android:background="@drawable/card_background"
                            android:gravity="center"
                            android:text="K♥"
                            android:textColor="@color/black"
                            android:textSize="36sp"
                            android:clickable="true"
                            android:focusable="true"/>

                    </LinearLayout>

                    <TextView
                        android:id="@+id/positionText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="You are on the Button (BTN)"
                        android:textSize="18sp"
                        android:textColor="@color/white"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Action History Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Current Action"
                        android:textSize="20sp"
                        android:textColor="@color/dark_purple"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp"/>

                    <TextView
                        android:id="@+id/actionText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="UTG raises to 3BB\nCO 3-bets to 9BB\nAction on you"
                        android:lineSpacingExtra="8dp"
                        android:textSize="18sp"
                        android:textColor="@color/dark_purple"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Decision Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="What would you do?"
                android:textSize="20sp"
                android:textColor="@color/dark_purple"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"/>  <!-- Reduced from 12dp -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/foldButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Fold"
                    android:textSize="16sp"
                    android:padding="8dp"
                    android:layout_marginEnd="4dp"
                    app:backgroundTint="@color/primary_purple"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/callButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Call (9BB)"
                    android:textSize="16sp"
                    android:padding="8dp"
                    android:layout_marginHorizontal="4dp"
                    app:backgroundTint="@color/primary_purple"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/raiseButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="4-bet to 24BB"
                    android:textSize="16sp"
                    android:padding="8dp"
                    android:layout_marginEnd="4dp"
                    app:backgroundTint="@color/primary_purple"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/allinButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="All-In"
                    android:textSize="16sp"
                    android:padding="8dp"
                    android:layout_marginStart="4dp"
                    app:backgroundTint="@color/primary_purple"/>

            </LinearLayout>

            <!-- Feedback Section -->
            <androidx.cardview.widget.CardView
                android:id="@+id/feedbackCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/resultText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Correct!"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:textColor="@color/green"
                        android:layout_marginBottom="12dp"/>

                    <TextView
                        android:id="@+id/explanationText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4-betting with AKs is optimal here as we're in position and our hand performs well against villain's 3-betting range."
                        android:textSize="16sp"
                        android:textColor="@color/dark_purple"
                        android:layout_marginBottom="16dp"/>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/nextHandButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Next Hand"
                        android:textSize="16sp"
                        android:padding="8dp"
                        app:backgroundTint="@color/primary_purple"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>
</LinearLayout>